	<ItemGroup>
		<PackageReference Include="Sayers.SDL2.Core" Version="1.0.11" />
	</ItemGroup>

	<ItemGroup>
		<NativeSayersSDL2CoreLibs Remove="Sound\FMOD\API\fmod.dll" />
	</ItemGroup>

	<ItemGroup>
		<NativeSayersSDL2CoreLibs Remove="Sound\FMOD\API\fmodL.dll" />
	</ItemGroup>

</Project>
